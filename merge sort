//sw expert academy에 나온 머지소트를 한번에 이렇게 짜는거 존멋;
void sort(int a[], int len, bool compare(char*, char*))
{
	if (len < 2)
		return;
	int mid = len / 2;
	sort(a, mid, compare);
	sort(a + mid, len - mid, compare);
	int i = 0, j = mid, k = 0;
	while (i < mid&&j < len)
	{
		if (compare(in + a[i], in + a[j]))
			buf[k++] = a[i++];
		else
			buf[k++] = a[j++];
	}
	while (i < mid)
		buf[k++] = a[i++];
	while (j < len)
		buf[k++] = a[j++];
	for (int i = 0; i < len; i++)
		a[i] = buf[i];
}
